---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="unethical.">
	<main>
		<h1><span class="text-gradient">unethical.</span></h1>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://unethical.team/discord"
				title="Community "
				body="Come say hi to the unethical discord. ❤️"
			/>
			<Card
				href="https://github.com/unethicalteam/lcbud"
				title="lcbud "
				body="lunar client batch utility downloader."
			/>
			<Card
				href="https://multiverproxy.unethical.team"
				title="multiverproxy "
				body="sending POST requests to Lunar Client for you."
			/>			
			<Card
				href="https://github.com/unethicalteam/lccll.sh"
				title="lccll.sh "
				body="a fork of flags.sh for generating Lunar Client launch scripts."
			/>					
		</ul>
		<h3><span class="text-gradient">dmca@unethical.team</span></h3>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	h3 {
		font-size: 1rem;
		font-weight: 300;
		text-align: center;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
